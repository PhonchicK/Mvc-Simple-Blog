@model IEnumerable<MvcSimpleBlog.Entities.Concrete.Blog>
@{
    ViewBag.Title = "Index";
}
@foreach (var item in Model)
{
    <div class="card rounded-0 shadow-sm">
        <div class="card-header">
            <span>By</span>
            <span class="text-success"><a>@item.User.Username</a></span>
            <span>On</span>
            <span class="text-success"> 28 Dec 2018</span>
        </div>
        <div class="card-body">
            <img class="card-img-top" src="~/Content/Uploads/@item.Image" alt="@item.Title">
            <hr>
            <h2 class="card-title">@item.Title</h2>
            <p class="card-text">@item.Content</p>
            @Html.ActionLink("Read more","Details",new { @seoUrl = item.SeoUrl }, new { @class = "btn btn-primary" })
            <a href="Details/@item.SeoUrl" class="btn btn-primary">Read more</a>
        </div>
    </div>
}