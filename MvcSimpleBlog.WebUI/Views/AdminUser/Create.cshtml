@model MvcSimpleBlog.Entities.Concrete.User
@{
    ViewBag.Title = "New User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--ACTIONS-->
<section id="actions" class="py-4 mb-4 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <a href="@Url.Action("", "AdminUser", new { Area = "admin" })" class="btn btn-light btn-block">
                    <i class="fas fa-check"></i> Back To Users
                </a>
            </div>
        </div>
    </div>
</section>
<!--END ACTIONS-->
<!-- DETAILS-->
<section id="details">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4>User</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "AdminUser", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="Username">Username</label>
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="avatar">avatar</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="avatar" name="avatar" />
                                    <label for="avatar" class="custom-file-label">Choose File</label>
                                </div>
                                <small class="form-text text-muted">Max Size 5mb</small>
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="Auth">Auth</label>
                                @Html.TextBoxFor(x => x.Auth, new { @class = "form-control" })
                            </div>
                            <input type="submit" class="btn btn-success btn-block" value="Add" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END DETAILS-->